@using MVC5OnlineTicariOtomasyon.Models.Siniflar
@model List <Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-striped">
    <tr>
        <th>Cari ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CariId</td>
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariSehir</td>
            <td>@x.CariMail</td>
            <td><a href="/Cari/CariSil/@x.CariId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir/@x.CariId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Cari/MusteriSatisGetir/@x.CariId" class="btn btn-default">Satış Geçmişi</a></td>
        </tr>
    }
</table>
<a href="/Cari/YeniCariEkle/" class="btn btn-info">Yeni Cari Ekle</a>