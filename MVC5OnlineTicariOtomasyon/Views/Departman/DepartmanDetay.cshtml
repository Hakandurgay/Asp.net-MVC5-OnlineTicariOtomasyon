@using MVC5OnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Detay</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.sanalDegiskenAdiOnemsiz</li>
</ol>

<table class="table table-hover">
    <tr>
        <th>Personel ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.PersonelId</td>
    <td>@x.PersonelAd</td>
    <td>@x.PersonelSoyad</td>
    <td>@x.PersonelGorsel</td>
    <td><a href="/Departman/DepartmanSatisPersonel/@x.PersonelId" class="btn btn-default" style="background-color:antiquewhite">Satışlar</a></td>
 
</tr>
    }
    
</table>
